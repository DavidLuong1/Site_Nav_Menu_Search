*
  margin: 0
  padding: 0
  list-style: none
  text-decoration: none
  box-sizing: border-box
  color: #000


header, .equal-width-bar, footer
  left: 0
  right: 0


header, footer
  position: absolute


header
  top: 0
  background-color: #E3DCE0


header li, .header-nav-left, .equal-width-bar a
  float: left


#menu:hover
  background-color: #999


header li
  background-color: #E3DCE0
  padding: 10px 16px


.header-nav-right, input[type=text], input[type=text]:focus
  /* background-position: 100% center /*ease from right to left */
  /* background-position: 0 center /*ease from left to right* */
  float: right


header, .equal-width-bar, input[type=text]:focus
  width: 100%


input[type=text]
  width: 120px
  border: solid #ccc
  border-radius: 10px
  background: #FCF5E5 url('searchicon.png') 5px 0px no-repeat
  /* background-position: 5px 0px */
  /* background-repeat: no-repeat */
  padding: 0px 15px 0px 30px
  /* transition-timing-function: linear */
  -webkit-transition: width 0.3s ease-in-out
  -moz-transition: width 0.3s ease-in-out
  -ms-transition: width 0.3s ease-in-out
  -o-transition: width 0.3s ease-in-out
  transition: width 0.3s ease-in-out


.equal-width-bar
  background-color: #B8E3BB
  position: relative
  margin-top: 60px
  overflow: auto


.equal-width-bar a
  width: 20%
  padding: 8px 0


.equal-width-bar a:hover
  background-color: #D8E3AA


.equal-width-bar a:not(:last-child)
  border-right: 1px solid #333


.equal-width-bar, footer
  text-align: center


footer
  bottom: 0
  background-color: #222


.pagination a.active
  background-color: #3C60FF


.pagination a
  color: #fff
  padding: 0 16px


  /*  */
@media all and (max-width: 1200px)
  .header-nav-left
    clear: both


  .header-nav-right
    float: left


  li.tabs
    /* display: none */


  input[type=text]
    width: 150px
